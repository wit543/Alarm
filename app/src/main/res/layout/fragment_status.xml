<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xyz.wit543.wit.alarm.fragment.StatusFragment">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/alarm_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_alarm_off_black_24dp"
        android:layout_alignParentBottom="true"
        android:scaleType="center"
        android:layout_margin="@dimen/fab_margin"
        android:layout_alignEnd="@+id/textView" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/friend_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_group_add_black_24dp"

        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/alarm_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_alarm_add_black_30dp"

        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/alarm_recycler_view"
        android:scrollbars="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
